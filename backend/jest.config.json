{
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/index.js",
        "!src/**/index.js",
        "!**/node_modules/**"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
        }
    },
    "testMatch": [
        "**/__tests__/**/*.test.js",
        "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
}